{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES6",
      "ES2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "types": [
      "node",
      "jest",
      "@types/react-native",
      "@types/aws-lambda"
    ]
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "index.ts",
    "amplify/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "ios",
    "android"
  ],
  "extends": "expo/tsconfig.base"
}
